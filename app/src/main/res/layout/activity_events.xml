<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carol.bucketlistfam.EventsActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/findEventsButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/images" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Events Timeline"
          android:id="@+id/appNameTextView"
        android:textColor="@color/colorTextIcons"
        android:textSize="35sp"

          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventsEditText"

        android:layout_marginBottom="72dp"
        android:padding="5dp"
        android:background="@color/white"
        android:hint="Browse events in Kenya"
        android:layout_above="@+id/findEventsButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse Adventures"
        android:id="@+id/findEventsButton"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorTextIcons"
        android:layout_above="@+id/photoUploadButton" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload adventure photos"
        android:id="@+id/photoUploadButton"

        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorTextIcons"
        android:layout_above="@+id/postEventBtn"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload adventure photos"
        android:id="@+id/postEventBtn"
        android:layout_marginTop="3dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorTextIcons"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
